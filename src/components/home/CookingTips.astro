---
import RecipeCard from "../RecipeCard.astro";

import { recipes, tips } from "../../mocks/recipes.ts";
---

<div class="container mx-auto p-6">
  <h2 class="text-3xl font-bold mb-6 text-center text-cyan-600">
    Tips de Cocina
  </h2>
  <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6">
    {
      tips.map((tip) => (
        <div
          key={tip.id}
          class="bg-white rounded-xl shadow-lg p-6 hover:shadow-xl transition-shadow"
        >
          <h3 class="text-xl font-semibold mb-2 text-cyan-600">{tip.title}</h3>
          <p class="text-gray-700 mb-4">{tip.content}</p>
          <div class="flex items-center justify-between">
            <button class="text-sm text-cyan-600 hover:underline">
              Leer m√°s
            </button>
            <span class="text-xs text-gray-500">{`Tip #${tip.id}`}</span>
          </div>
        </div>
      ))
    }
  </div>
</div>
