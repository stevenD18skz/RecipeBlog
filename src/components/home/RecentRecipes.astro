---
import RecipeCard from "../RecipeCard.astro";
import { recipes } from "../../mocks/recipes.ts";
---

<div class="bg-gradient-to-b from-gray-50 to-gray-100 py-12">
  <div class="container mx-auto px-4 sm:px-6">
    <h2
      class="text-4xl font-bold mb-12 text-center bg-gradient-to-r from-cyan-500 to-purple-500 text-white py-6 rounded-2xl shadow-lg"
    >
      Recetas Recientes
    </h2>

    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-8">
      {recipes.map((recipe) => <RecipeCard key={recipe.id} {...recipe} />)}
    </div>
  </div>
</div>
