---
import RecipeCard from "../RecipeCard.astro";
import { recipes } from "../../mocks/recipes.ts";

import ChefHatIcon from "../../icons/ChefHat.astro";
import TimerIcon from "../../icons/Timer.astro";
import UsersIcon from "../../icons/Users.astro";

const recipe = recipes[0];
console.log(recipe);
---

<div class="min-h-screen bg-gradient-to-b from-gray-50 to-gray-100 py-12">
  <div class="container mx-auto px-4 sm:px-6">
    <h2
      class="text-4xl font-bold mb-8 text-center bg-gradient-to-r from-cyan-500 to-purple-500 text-white py-6 rounded-2xl shadow-lg"
    >
      Receta del Día
    </h2>

    <div
      class="max-w-4xl mx-auto bg-white rounded-2xl shadow-xl overflow-hidden"
    >
      <div class="relative h-[300px] sm:h-[400px]">
        <img
          src={recipe.image}
          alt={recipe.name}
          class="absolute inset-0 w-full h-full object-cover"
        />
        <div
          class="absolute inset-0 bg-gradient-to-t from-black/60 to-transparent"
        >
        </div>
        <h3 class="absolute bottom-6 left-6 text-3xl font-bold text-white">
          {recipe.name}
        </h3>
      </div>

      <div class="p-8 bg-gradient-to-br from-cyan-50 via-white to-purple-50">
        <div class="grid grid-cols-1 sm:grid-cols-3 gap-6">
          <div
            class="flex items-center gap-3 bg-white p-4 rounded-xl shadow-sm"
          >
            <ChefHatIcon class="w-6 h-6 text-cyan-600" />
            <div>
              <p class="text-sm font-medium text-gray-500">Preparación</p>
              <p class="font-semibold text-gray-800">
                {recipe.preparation_time}
              </p>
            </div>
          </div>

          <div
            class="flex items-center gap-3 bg-white p-4 rounded-xl shadow-sm"
          >
            <TimerIcon class="w-6 h-6 text-cyan-600" />
            <div>
              <p class="text-sm font-medium text-gray-500">Cocción</p>
              <p class="font-semibold text-gray-800">
                {recipe.cooking_time}
              </p>
            </div>
          </div>

          <div
            class="flex items-center gap-3 bg-white p-4 rounded-xl shadow-sm"
          >
            <UsersIcon class="w-6 h-6 text-cyan-600" />
            <div>
              <p class="text-sm font-medium text-gray-500">Porciones</p>
              <p class="font-semibold text-gray-800">
                {recipe.servings} personas
              </p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
