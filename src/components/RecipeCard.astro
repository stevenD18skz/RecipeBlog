---
import ChefHatIcon from "../assets/ChefHat.astro";
import TimerIcon from "../assets/Timer.astro";
import UsersIcon from "../assets/Users.astro";

const { id, name, preparation_time, cooking_time, servings, image, url } =
  Astro.props;

interface Recipe {
  id: number;
  name: string;
  preparation_time: string;
  cooking_time: string;
  servings: number;
  image: string;
  url: string;
}
---

<a
  href={`/recipe/${id}`}
  class="block bg-white rounded-xl shadow-lg overflow-hidden hover:shadow-xl transition-all duration-300 transform hover:scale-105"
>
  <div class="relative h-48">
    <img
      src={image}
      alt={name}
      class="absolute inset-0 w-full h-full object-cover"
    />
    <div class="absolute inset-0 bg-gradient-to-t from-black/60 to-transparent">
    </div>
  </div>

  <div class="p-5">
    <h3 class="text-xl font-bold text-gray-800 mb-4">{name}</h3>

    <div class="space-y-2">
      <div class="flex items-center gap-2 text-sm">
        <ChefHatIcon class="w-4 h-4 text-cyan-600" />
        <span class="text-gray-600">Prep: {preparation_time}</span>
      </div>

      <div class="flex items-center gap-2 text-sm">
        <TimerIcon class="w-4 h-4 text-purple-600" />
        <span class="text-gray-600">Cocci√≥n: {cooking_time}</span>
      </div>

      <div class="flex items-center gap-2 text-sm">
        <UsersIcon class="w-4 h-4 text-indigo-600" />
        <span class="text-gray-600">{servings} porciones</span>
      </div>
    </div>
  </div>
</a>
